{
  "extends": ["next/core-web-vitals", "@mate-academy/eslint-config-react-typescript"],
  "parserOptions": {
    "project": "**/tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "**/tsconfig.json"
      }
    }
  },
  "rules": {
    "max-len": ["error", { "code": 100 }]
  }
}
